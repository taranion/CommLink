<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%5p [%15c] (%F:%L) - %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="WARN">
			<AppenderRef ref="Console" />
		</Root>
    <Logger name="sun" level="ERROR"/>
    <Logger name="xml" level="warn"/>
    <Logger name="jdk" level="warn"/>
    <Logger name="javafx" level="info"/>
    <Logger name="prelle.jfx" level="WARN"/>
    <Logger name="de.rpgframework.shadowrun.chargen" level="ERROR"/>
    <Logger name="de.rpgframework.shadowrun6.chargen" level="ERROR"/>
    <Logger name="de.rpgframework.shadowrun6.chargen.jfx.selector" level="DEBUG"/>
	</Loggers>
</Configuration>
			